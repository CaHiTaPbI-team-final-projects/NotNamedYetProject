<Window x:Class="WithoutName.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WithoutName.Views"
        mc:Ignorable="d"

        Height="230" Width="270"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        >

    <Border Background="#37743E" 
            CornerRadius="20"
            >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="24"/>

            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                <Label Content="Username:"
                       Foreground="#E9E9E9"
                       FontSize="15"
                       Width="270"
                       Height="33"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                />
                <TextBox Width="270"
                         Height="40"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Center"
                         Style="{StaticResource ModernField}"
                         Grid.ColumnSpan="2"
                />

                <Label Content="Password:"
                       Foreground="#E9E9E9"
                       FontSize="15"
                       Width="270"
                       Height="33"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                />
                <TextBox Width="270"
                         Height="40"
                         VerticalAlignment="Top"
                         HorizontalAlignment="Center"
                         Style="{StaticResource ModernField}"
                         Grid.ColumnSpan="2"
                />

            </StackPanel>

            <!--BUTTONS-->
            <RadioButton Content=" Log in"
                         Height="50"
                         Foreground="#E9E9E9"
                         FontSize="18"
                         Style="{StaticResource MenuButtonTheme}"
                         Grid.Row="2" 
                         Margin="0,0,111,0"
            />

            <RadioButton Content="Register"
                         Foreground="White"
                         FontSize="16"
                         Style="{StaticResource MenuButtonTheme}" 
                         Grid.Row="2" 
                         Margin="135,0,0,0" 
                         Grid.ColumnSpan="2"                        
            />

            <Button x:Name="ExitButton" 
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Style="{DynamicResource ExitButtonTheme}" Margin="0,-6,9,6"
            />
        </Grid>

    </Border>
</Window>
